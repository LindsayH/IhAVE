<!-- Nav -->
<nav class="navbar navbar-inverse navbar-fixed-top" >
  <div class="container-fluid">
    <div class="navbar-left">
      <% if current_user %>
    
<!-- Menu toggle button -->
        
          <button id="dLabel" class="btn btn-primary" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="align"> 
            <i class="fa fa-bars"></i>
          </button>
        

 <!-- Menu toggle items -->
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
            <li><% current_user.locations.each do |location| %></li>
            <li><%= link_to location.name, location_items_path(location) %></li>
            <% end %>
          </ul>
      <% end %>

<!-- Logo -->
      <a class=""> 
        <% if signed_in? %>
          <%= link_to 'iHAVE', locations_path, class: 'logo' %>
        <% else %>
          <%= link_to 'iHAVE', root_path, class: 'logo' %>
        <% end %>
      </a>

    </div>
<!-- Log out -->
    <div class="top-menu">
      <ul class="nav navbar-right top-menu">
      <% if !current_user %>
        <li><button type="button" class="btn btn-info logout" data-toggle="modal" data-target="#signUp" data-id="sign-up">Sign Up</button></li>
        <li><button type="button" class="btn btn-info logout" data-toggle="modal" data-target="#signIn" data-id="sign-in">Sign In</button></li>
      <% else %>
        <li><%= link_to 'Logout', destroy_user_session_path, class: "btn btn-info logout", method: :delete %></li>
      <% end %>  
      </ul>
    </div>
  </div>
</nav>
