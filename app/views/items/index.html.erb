
<section class="content">
<h1><%= @location.name.upcase %> Items:<%= link_to "Add New item", new_location_item_path(@location,@item), class:"btn btn-primary"  %>
  <%= link_to "Back", locations_path, class:"btn btn-primary" %></h1>




  
  <div class="container-fluid">
    <div class ="row image-tiles">
      <%if @items %>
	      <% @items.each do |item| %>
          <div class="col-xs-12 col-md-6 col-lg-4 display">
            <img src="http://beerhold.it/350/350/g" alt="Beerhold.it" class="img-circle">
            <p><strong> Item: <%= item.name %></strong></p>
            <p><%= item.description %></p>
            <%= item.tag_list %>
            <p class="text-center"><%= link_to "Delete", location_item_path(@location, item), method: :delete, class: "btn btn-danger btn-s" %></p>
            
          </div>
         <%end%>


<%if @items %>
	<% @items.each do |item| %>

  	<div class="items">
    	<ul>
        <%= image_tag item.avatar.url %>
      	<li><%= item.name %></li>
      	<li><%= item.tag_list %></li>

          <p><%= link_to 'New Item', new_location_item_path(location), class: 'btn btn-primary' %></p>
      	<%= link_to "Show", location_item_path(@location, item), class: "btn btn-success btn-xs" %>
      	<%= link_to "Delete", location_item_path(@location, item), method: :delete, class: "btn btn-danger btn-xs" %>
    	</ul>
    	<%end%>
    </div>
  </div>
   
     

   
  
<% end %>

</section>
