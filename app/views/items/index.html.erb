<h1><%= @location.name.upcase %> Items</h1>


<%if @items %>
	<% @items.each do |item| %>

  	<div class="items">
    	<ul>
        <%= image_tag item.avatar.url %>
      	<li><%= item.name %></li>
      	<li><%= item.tag_list %></li>


      	<%= link_to "Show", location_item_path(@location, item), class: "btn btn-success btn-xs" %>
      	<%= link_to "Delete", location_item_path(@location, item), method: :delete, class: "btn btn-danger btn-s" %>
    	</ul>
    	<%end%>
    </div>
<% end %>


