<h1><%= @location.name.upcase %> Items</h1>

<div class="main-button-content">
  <%= link_to "Add New item", new_location_item_path(@location,@item), class:"btn btn-primary"  %>
  <%= link_to "Back", locations_path, class:"btn btn-primary" %>
</div>
  
<div class="field">
  <%= form_tag(location_item_search_path(@location), method: "get", remote: true) do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag :q, nil, placeholder: 'Search item name/tags' %>
    <%= submit_tag("Search") %>
  <% end %>
</div>

<div class="search-results">
  <% if @results %>
    <%= @results %>
  <% end %>
</div>



  <div class="container-fluid item-block">
    <div class ="row image-tiles">
      <%if @items %>
        <% @items.each do |item| %>
          <div class="col-xs-12 col-md-6 col-lg-4 display">
            <div class = "item-img">
                <%= image_tag item.avatar.url(:medium) %>
            </div>
            <p> <strong> Item: <%= item.name %> </strong> </p>
            <p><%= item.description %></p>
            <%= item.tag_list %>
            <p class="text-center"><%= link_to "Delete", location_item_path(@location, item), method: :delete, class: "btn btn-danger btn-s" %></p>
          
    </div>
         <%end%>

         <% end %>
         </div>
  </div>

