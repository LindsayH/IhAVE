function bindLendButton(){
	$('.lend-button').bind("click", function() {

		$(this).replaceWith("<%= j render partial: 'is_out_form' %>");
		$('.date').datepicker({
			dateFormat: 'yy-mm-dd'
		});
		$('#new_record').validate({
			
			rules: {
				"record[borrower_name]": { required: true },
				"record[date_due]": { required: true, date: true }
			}
		});
	});
}

bindLendButton();


