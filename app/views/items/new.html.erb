
<%= bootstrap_form_for [@location, @item] do |f| %>

<%= f.file_field :avatar %>
  
  <%= f.text_field :name %>

  <%= f.text_area :description %>

  <%= f.check_box :is_out %>
  
  <% if @item.is_out %> 
    <%= render 'loan' %>   

   
  <%end%>

		<%= f.text_field :tag_list %>


  <%= f.submit %>

<% end %>

	
