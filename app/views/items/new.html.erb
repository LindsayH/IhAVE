
<%= bootstrap_form_for [@location, @item] do |f| %>

<%= f.file_field :avatar %>
  
  <%= f.text_field :name %>

  <%= f.text_area :description %>

  <%= f.check_box :is_out %>
  
  <% if @item.is_out %> 
    <%= render 'loan' %>   

    <%= f.bootstrap_fields_for :records do |records_form| %>

      <%= records_form.label :date_due %>
      <%= records_form.text_field :date_due %>

      <%= records_form.label :borrower_name %>
      <%= records_form.text_field :borrower_name %>

    <% end %>
  <%end%>

		<%= f.text_field :tag_list %>


  <%= f.submit %>

<% end %>

	
