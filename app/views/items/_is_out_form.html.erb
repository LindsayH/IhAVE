<%= bootstrap_form_for [@location, @item, @record] do |f| %>

	<%= f.text_field :borrower_name, class: 'form-control', autofocus: true, placeholder: "Borrower's name" %>
	<%= f.text_field :borrower_email, class: 'form-control', placeholder: "Borrower's Email" %>
	<%= f.text_field :date_due, class: "date", placeholder: "Date due" %>


  <%= f.submit %>

<% end %>