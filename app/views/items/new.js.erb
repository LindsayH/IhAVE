$('#modal-div').html('<%= j render "modal" %>');
$('#newItem').modal('show');
$(".modal-body").empty().append("<%= j render partial: 'new_form', locals: {using_modal: true} %>");
console.log('this worked');
$('#new_item').validate({
	rules: {
		"item[name]": { required: true },
		"item[description]": { required: true },
		"item[borrowed_from]": { required: true },
		"item[due_date]": { required: true, date: true }
	}
});

$(function() {
	$('#item_is_borrowed').change(function() {
		if($('#item_is_borrowed').prop('checked')) {
			$('.record-form').show();
		}
		else {
			$('.record-form').hide();
		}
	});

	$('.date').datepicker({
		dateFormat: 'yy-mm-dd'
	});

	$("#item_tag_list").tagit();
	
});