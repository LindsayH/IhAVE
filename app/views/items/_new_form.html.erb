<div class="">
  <%= bootstrap_form_for [@location, @item], layout: :horizontal do |f| %>
    <%= f.file_field :avatar %>
    <%= f.text_field :name %>
    <%= f.text_area :description %>
    <%= f.text_field :price %>
    <%= f.number_field :quantity %>
    <%= f.text_field :tag_list, class: "tagit ui-widget ui-widget-content ui-corner-all" %>
    <%= f.check_box :is_borrowed, class: "checkbox", id: "item_is_borrowed" %>
    <div class="record-form" style="<%= 'display: block;' if params[:item] && params[:item][:is_borrowed] == '1' %>">
      <%= f.text_field :borrowed_from %> 
      <%= f.text_field :due_date, class: "date" %>
    </div>

    <%= f.submit %>
    <% if using_modal %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <% end %>
  <% end %>
</div>

