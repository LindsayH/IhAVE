
<%= bootstrap_form_for [@location, @item] do |f| %>

    <%= f.file_field :avatar %>
    <%= f.text_field :name %>
    <%= f.text_area :description %>
    <%= f.text_field :price %>
    <%= f.number_field :quantity %>
    <%= f.check_box :is_out, class: "checkbox" %>

    <div class="record-form">
      <%= f.fields_for :records do |records_form| %>
          <%= records_form.text_field :borrower_name %>
          <%= records_form.text_field :date_due, class: "date" %>
      <% end %>
    </div>

    <div class="form-group">
      <!-- <label class="control-label" for="item_tag_list">Tag list</label> -->
      <%= f.text_field :tag_list, class: "tagit ui-widget ui-widget-content ui-corner-all" %>

      <!-- <input id="myTags" class="tagit ui-widget ui-widget-content ui-corner-all"> -->


    </div>

    <%= f.submit %>
    <% if using_modal %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <% end %>

<% end %>

