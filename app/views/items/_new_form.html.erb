
<div class="">
  <%= bootstrap_form_for [@location, @item], layout: :horizontal do |f| %>
    <%= f.file_field :avatar %>
    <%= f.text_field :name %>
    <%= f.text_area :description %>
    <%= f.text_field :price %>
    <%= f.number_field :quantity %>
    <%= f.text_field :tag_list, class: "tagit ui-widget ui-widget-content ui-corner-all" %>
    <%= f.check_box :is_out, class: "checkbox" %>
    <div class="record-form" style="<%= 'display: block;' if params[:item] && params[:item][:is_out] == '1' %>">
      <%= f.fields_for :records, (@item.records.first || @item.records.new) do |records_form| %>
        <%= records_form.text_field :borrower_name %>
        <%= records_form.text_field :date_due, class: "date" %>
      <% end %>
    </div>
    <%= f.submit %>
    <% if using_modal %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <% end %>
  <% end %>
</div>

