<div class="">
  <%= bootstrap_form_for [@location, @item], layout: :horizontal do |f| %>
    <%= f.file_field :avatar, label: "Upload image", label_class: "new-item-form" %>
    <%= f.text_field :name, label: "Name", label_class: "new-item-form", placeholder: "2-16 characters long" %>
    <%= f.text_area :description, label: "Description", label_class: "new-item-form" %>
    <%= f.text_field :price, label: "Price", label_class: "new-item-form" %>
    <%= f.number_field :quantity, label: "Quantity", label_class: "new-item-form" %>
    <%= f.text_field :tag_list, class: "tagit ui-widget ui-widget-content ui-corner-all", label: "Tags", label_class: "new-item-form" %>
    <%= f.check_box :is_borrowed, class: "checkbox", id: "item_is_borrowed", label: "Did you borrow this item?" %>
    <div class="record-form" style="<%= 'display: block;' if params[:item] && params[:item][:is_borrowed] == '1' %>">
      <%= f.text_field :borrowed_from, label: "From who?", label_class: "new-item-form" %> 
      <%= f.date_field :due_date, class: "date", label: "Due Date?", label_class: "new-item-form" %>
    </div>

    <%= f.submit 'Add Item', class: "btn btn-primary" %>
    <% if using_modal %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <% end %>
  <% end %>
</div>

